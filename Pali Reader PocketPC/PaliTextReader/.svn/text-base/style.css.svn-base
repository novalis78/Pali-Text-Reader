/* This is the stylesheet for Roman UTF-8 Unicode encoding. 
*/

body 
{ 
font-family:"CN-Times", "Arial Unicode MS", "Indic Times", "Utopia Unicode IndoLatin", "Tahoma";
font-size: 12pt;
}

SPAN {}
.variant {color: blue}

p {
border-top: 0in; border-bottom: 0in;
padding-top: 0in; padding-bottom: 0in;
margin-top: 0in; margin-bottom: 0.5cm;
}
/*  */
.c01 { font-size: 12pt; text-indent: 2em; margin-bottom: 0em;}


.c02 { font-size: 12pt;}


.c03 { font-size: 12pt; text-indent: 2em;}

/* Namo tassa, and nitthita -- no unique structural distinction */
.c06 { font-size: 12pt; text-align:center;}

/* Unindented text */
.c07 { font-size: 12pt;}

/* Book */
.c10 { font-size: 21pt; text-align:center; font-weight: bold;}

/* Sutta */
.c11 { font-size: 14pt; text-align:center; font-weight: bold;}

/* Nikaaya */
.c12 { font-size: 16pt; text-align:center; font-weight: bold;}

/* Section (above 14)*/
.c13 { font-size: 12pt; text-align:center; font-weight: bold;}

/* Section */
.c14 { font-size: 12pt; text-align:center; font-weight: bold;}

/* Gatha line */
.c21 { font-size: 12pt; text-indent: 1em; margin-bottom: 0em;}

/* Gatha line */
.c22 { font-size: 12pt; text-indent: 2em; margin-bottom: 0.5cm;}

/* Gatha line */
.c26 { font-size: 12pt; text-indent: 1em; margin-bottom: 0em;}

/* Gatha line */
.c27 { font-size: 12pt; text-indent: 2em; margin-bottom: 0em;}
