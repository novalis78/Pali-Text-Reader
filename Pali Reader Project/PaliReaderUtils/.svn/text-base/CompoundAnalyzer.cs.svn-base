using System;

namespace PaliReaderUtils
{
	/// <summary>
	/// Description of CompoundAnalyzer.
	/// </summary>
	public class CompoundAnalyzer
	{
		public CompoundAnalyzer()
		{
		}
		
		public static string GetCompositaType(string compound)
		{
			if(compound.Contains("an"))
			{
				return "kammadharaya";
			}
			else if(compound.Contains("cat"))
			{
				return "digu";
			}
			else if(compound.Contains("gato"))
			{
				return "tappurisa";
			}
			else if(compound.Contains("dva"))
			{
				return "dvanda";
			}
			else if(compound.Contains("avya"))
			{
				return "avyayibhava";
			}
			else if(compound.Contains("bah"))
			{
				return "bahubbihi";
			}
			return "";
		}
	}
}
